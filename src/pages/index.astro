---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import heroPhoto from '../assets/YO.jpg';

const translations = {
  greeting: { en: "Hello, I'm", es: "Hola, soy" },
  name: { en: "Paula Marín", es: "Paula Marín" },
  availability: { en: "Open to work", es: "Disponible para trabajar" },
  viewProjects: { en: "View Evidences", es: "Ver Evidencias" },
  getInTouch: { en: "Get in Touch", es: "Contactar" },
  presentation: { en: "Presentation", es: "Presentación" },
  about: { en: "About Me", es: "Sobre mí" },
  aboutDesc: {
    es: "Estudiante de Ingeniería de Sistemas con experiencia en atención al usuario y gestión de información. Actualmente trabajo en Minerva Medical SAS, donde utilizo sistemas empresariales, organizo documentación y ayudo a resolver solicitudes de manera eficiente. También tengo conocimientos en soporte técnico y herramientas digitales, lo que me lleva a crear soluciones propias, buscando iniciar mi carrera en tecnología aplicando mi responsabilidad, aprendizaje continuo y resolución de problemas.",
    en: "Systems Engineering student with experience in user support and information management. I currently work at Minerva Medical SAS, where I use business systems, organize documentation, and help resolve requests efficiently. I also have knowledge in technical support and digital tools, which motivates me to create my own solutions while starting my career in technology through responsibility, continuous learning, and problem-solving."
  },
  tech: { en: "Tech Stack", es: "Tecnologías" }
};
---

<Layout title={`Home | Paula Marín`}>
  <Header />

  <main class="min-h-screen px-4 sm:px-6 md:px-6">
    <section class="max-w-3xl mx-auto min-h-[calc(100vh-5rem)] flex flex-col justify-center pt-32 sm:pt-48 pb-16 sm:pb-24 fade-in">
      <div class="flex flex-col items-center gap-6 sm:gap-8 text-center">
        <div class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4">
          <div class="w-24 h-24 sm:w-28 sm:h-28 md:w-32 md:h-32 rounded-full bg-gray-100 dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 flex items-center justify-center overflow-hidden animated-border always-visible flex-shrink-0 shadow-lg dark:shadow-white/20">
            <img src={heroPhoto.src} alt="Paula Marín" class="w-full h-full object-cover" />
          </div>
          <div class="animated-border always-visible px-3 sm:px-4 py-2 rounded-full border border-gray-300 dark:border-gray-600 h-fit">
            <p class="text-xs sm:text-sm font-medium text-gray-900 dark:text-white whitespace-nowrap">{translations.availability.en}</p>
          </div>
        </div>

        <div>
          <p class="text-xs sm:text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">{translations.greeting.en}</p>
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4 sm:mb-6 px-2 sm:px-0">{translations.name.en}</h1>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400 max-w-lg mx-auto mb-4 sm:mb-6 px-2 sm:px-0">
            <span class="font-semibold text-gray-900 dark:text-white">Systems Engineering student with experience supporting users and managing information using business tools. I develop projects to build my own solutions and am seeking my first opportunity in technology to grow professionally.</span>
          </p>

          <div class="flex flex-wrap gap-2 sm:gap-3 justify-center px-2 sm:px-0">
            <a href="/projects" class="cursor-pointer px-4 sm:px-5 py-2 sm:py-2.5 text-sm sm:text-base bg-gray-900 dark:bg-white text-white dark:text-gray-900 font-medium rounded-full hover:animated-bg transition-all">
              {translations.viewProjects.en}
            </a>
            <a href="/contact" class="animated-border cursor-pointer px-4 sm:px-5 py-2 sm:py-2.5 text-sm sm:text-base border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-white font-medium rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
              {translations.getInTouch.en}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Presentation Video -->
    <section class="max-w-3xl mx-auto py-16 fade-in px-2 sm:px-0">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6">{translations.presentation.en}</h2>
      <div class="rounded-2xl overflow-hidden border border-gray-200 dark:border-gray-800 shadow-lg">
        <video class="w-full h-auto" controls preload="metadata">
          <source src="/Presentation.mp4" type="video/mp4" />
          Your browser does not support the video tag.
        </video>
      </div>
    </section>

    <section class="max-w-3xl mx-auto py-12 sm:py-16 border-t border-gray-200 dark:border-gray-700 fade-in px-2 sm:px-0">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6 sm:mb-8">{translations.about.en}</h2>
      <div class="space-y-3 sm:space-y-4 text-base sm:text-lg leading-relaxed text-gray-600 dark:text-gray-400">
        {translations.aboutDesc.en}
      </div>
    </section>
  </main>

  <Footer />
</Layout>
